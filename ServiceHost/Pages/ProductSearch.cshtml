@page
@model ServiceHost.Pages.ProductSearch
@{


}


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title"> نتایج جستجو برای:@Model.Value</h1>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="shop-header">
                                    <div class="shop-header__left">
                                        <div class="shop-header__left__message">
                                            Showing 1 to 9 of 15 (2 Pages)
                                        </div>
                                    </div>


                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="shop-page-content">

                                    <div class="row shop-product-wrap grid three-column">
                                        @foreach (var item in Model.Products)
                                        {
                                            <div class="col-12 col-lg-4 col-md-4 col-sm-6">
                                                <div class="single-grid-product grid-view-product">
                                                    <div class="single-grid-product__image">
                                                        <div class="single-grid-product__label">

                                                            @if (item.Discount)
                                                            {
                                                                <span class="sale">-@item.DiscountRate%</span>
                                                            }
                                                        </div>
                                                        <a asp-page="Product" asp-route-id="@item.Slug">
                                                            <img src="/UpdolerFile/@item.Picture" class="img-fluid"
                                                             alt="@item.PictureAlt" title="@item.PictureTitle">

                                                        </a>


                                                    </div>
                                                    <div class="single-grid-product__content">
                                                        <div class="single-grid-product__category-rating">
                                                            <span class="category">
                                                                <a>@item.Category</a>
                                                            </span>
                                                            <span class="rating">
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                            </span>
                                                        </div>

                                                        <h3 class="single-grid-product__title">
                                                            <a asp-page="Product" asp-route-id="@item.Slug">@item.Name</a>
                                                        </h3>
                                                        <p class="single-grid-product__price">
                                                            @if (item.Discount)
                                                            {
                                                                <span class="discounted-price">@item.PriceWithDiscoint تومان</span>
                                                                <span class="main-price discounted">@item.UnitPrice تومان</span>
                                                                <div class="product-countdown" data-countdown="@item.EndDateDiscount"></div>
                                                            }
                                                            else
                                                            {
                                                                <span class="main-price ">@item.UnitPrice تومان</span>
                                                            }

                                                        </p>

                                                    </div>
                                                </div>
                                                <!--=======  End of product grid view  =======-->

                                        </div>

                                        }

                                    </div>

                                </div>

                                <!--=======  pagination area =======-->
                                <div class="pagination-area">
                                    <div class="pagination-area__left">
                                        Showing 1 to 9 of 11 (2 Pages)
                                    </div>
                                    <div class="pagination-area__right">
                                        <ul class="pagination-section">
                                            <li>
                                                <a class="active" href="#">1</a>
                                            </li>
                                            <li>
                                                <a href="#">2</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <!--=======  End of pagination area  =======-->
                                <!--=======  End of shop page content  =======-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--=======  End of shop page wrapper  =======-->
            </div>
        </div>
    </div>
</div>

