@page "{id}"
@model ServiceHost.Pages.SearchArticles
@{
}


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title">نتایج جستجو برای:@Model.value</h1>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">


                            <div class="col-lg-9 order-1 order-lg-1">
                                <div class="blog-page-content">
                                    <div class="row">
                                        @foreach (var item in Model.Articles)
                                        {
                                            <div class="col-md-6">
                                                <div class="single-blog-post">
                                                    <div class="single-blog-post__image">
                                                        <a asp-page="/Article" asp-route-id="@item.Slug">
                                                            <img src="/UpdolerFile/@item.picture"
                                                             class="img-fluid" alt="@item.PictureAlt" title="@item.pictureTitle">
                                                        </a>

                                                    </div>
                                                    <div class="single-blog-post__content">
                                                        <h3 class="title">
                                                            <a asp-page="/Article" asp-route-id="@item.Slug">
                                                                @item.Title
                                                            </a>
                                                        </h3>
                                                        <p class="post-meta">
                                                            <span class="date">@item.PublishDate</span>

                                                        </p>
                                                        <p class="short-desc">
                                                            @item.ShortDescribtion
                                                        </p>
                                                        <a asp-page="/Article" asp-route-id="@item.Slug"
                                                       class="blog-post-link">خواندن مطلب...</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }


                                    </div>

                                </div>

                                <div class="pagination-area">
                                    <div class="pagination-area__left">
                                        Showing 1 to 9 of 11 (2 Pages)
                                    </div>
                                    <div class="pagination-area__right">
                                        <ul class="pagination-section">
                                            <li>
                                                <a class="active" href="#">1</a>
                                            </li>
                                            <li>
                                                <a href="#">2</a>
                                            </li>
                                            <li>
                                                <a href="#">></a>
                                            </li>
                                            <li>
                                                <a href="#">>|</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 order-2 order-lg-2">

                                <div class="page-sidebar-wrapper">
                                    @await Component.InvokeAsync("ArticleCategoriessidebar")

                                    @await Component.InvokeAsync("RecentPosts")


                                    
                                    <!--=======  End of single sidebar widget  =======-->
                                </div>
                                <!--=======  End of page sidebar wrapper  =======-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
