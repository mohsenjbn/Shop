<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (ViewData["Title"] != null)
    {
        <title>@ViewData["Title"] - فروشگاه لوازم دکوری</title>
    }
    else
    {
        <title>فروشگاه لوازم دکوری</title>
    }

    <meta name="keywords" content="@ViewData["keywords"]" />
    <meta name="description" content="@ViewData["metaDescription"]" />
    @if (ViewData["canonical"] != null)
    {
        <link rel="canonical" href="@ViewData["canonical"]" />

    }

    <!-- Vendor CSS -->
    <link href="/Theme/assets/css/vendors.css" rel="stylesheet">
    <!-- Main CSS -->
    <link href="/Theme/assets/css/style.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Theme/assets/css/Custom.css" rel="stylesheet">
</head>

<body>
    @await Component.InvokeAsync("Menu")

    @RenderBody()

    @await Component.InvokeAsync("Footer")


    <div class="search-overlay" id="search-overlay">
        <a href="javascript:void(0)" class="close-search-overlay" id="close-search-overlay">
            <i class="ion-ios-close-empty"></i>
        </a>
        <div class="search-form">
            <form method="get" asp-page="/ProductSearch">
                <input type="search" placeholder="هرچه می خواهید در فروشگاه جستجو کنید ..." name="value">
                <button type="submit">
                    <i class="ion-android-search"></i>
                </button>
            </form>
        </div>
    </div>


    <div id="scroll-top">
        <i class="ion-chevron-right"></i> <i class="ion-chevron-right"></i> <span>بازگشت به بالا </span>
    </div>
    <
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Theme/assets/js/vendors.js"></script>
    <script src="~/Theme/assets/js/active.js"></script>
    <script src="~/Theme/assets/js/plugins.js"></script>
    <script src="~/Theme/assets/js/main.js"></script>
    <script>
          $(document).ready(function() {
              updateCart();
          });
    </script>
</body>

</html>